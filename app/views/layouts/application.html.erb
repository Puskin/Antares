<!DOCTYPE html>
<html>
  	<head>
    	<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag :defaults %>
	</head>
	
	<body <%= body_height %> >
		<div class="<%= container_size %>">
			
			<%= show_header %>
			
			<div id="content">
				<% flash.each do |key, value| %>
				  <div class="flash <%= key %>"><%= value %></div>
				<% end %>   
				
				<%= yield %>
			</div>
		</div>
  	</body>
</html>