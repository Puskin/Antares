<!DOCTYPE html>
<html>
  	<head>
    	<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag :defaults %>
	</head>
	
	<body <%= body_class %>>
		
		<div class="<%= container_size %>">
			
			<%= show_header %>
			                  
			<% flash.each do |key, value| %>
			  <div class="flash <%= key %>"><%= value %></div>
			<% end %>
			
			<div id="content">				
				<%= yield %>
			</div>
			
			<div id="footer">
				Copyright Jetu.pl! kontakt@jetu.pl
			</div>
		</div>
  	</body>
</html>