<h3>Wys≈Çane zaproszenia:</h3>
<ul>
	<% @pending_contacts.each do |contact| %>
	    <% conn = Connection.conn(current_user, contact) %>
		<li>
			<%= gravatar_for contact, :size => 30 %>
			<p>
			<%= contact.name %> 
			<%= contact.surname %> 
			</p>   
			
			<% form_for(conn) do |f| %>
				<%= f.submit "Cofnij", :class => "abort" %>
			<% end %>
		</li>
	<% end %>
</ul>