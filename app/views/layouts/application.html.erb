<!DOCTYPE html>
<html>
  	<head>
    	<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
		<% unless @page_id == "landing" %>	
			<%= javascript_include_tag :defaults %>      
		<% end %>  
		
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-23677016-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
	</head>
	
	<body <%= body_class %>>
		
		<div class="<%= container_size %>">
			
			<%= show_header %>
			                  
			<% flash.each do |key, value| %>
			  	<div class="flash <%= key %>" id="notice"><%= value %></div>    
				<%= content_tag :script, :type => "text/javascript" do -%>
			        setTimeout("new Effect.Fade('notice');", 3000);
			    <% end %>     
			<% end %>
			
			<div id="content">				
				<%= yield %>
			</div>
			
			<% unless @page_id == "map" %>
				<div id="footer">
					Copyright Jetu 2011. Pocztę kierować na <a href="mailto: mateusz@burczynski.com">mateusz@burczynski.com</a>
				</div>                     
			<% end %>            
			
		</div>
  	</body>
</html>