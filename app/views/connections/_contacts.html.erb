<h1>Twoi znajomi:</h1>
<ul>
	<% @contacts.each do |contact| %>
	    <% conn = Connection.conn(current_user, contact) %>
		<li>
			<%= gravatar_for contact, :size => 30 %>
			<%= link_to "#{contact.name} #{contact.surname}", contact %>    
			             
		  	<% form_for(conn) do |f| %>
				<%= f.submit "Anuluj", :class => "button" %>
			<% end %> 
		</li>
	<% end %>
</ul>