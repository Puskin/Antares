<% if signed_in? %>
	
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?v=3.2&amp;sensor=false&amp;region=pl"></script>                                          

	<script type="text/javascript">   
	        function mapaStart()   
	        {   
	            var wspolrzedne = new google.maps.LatLng(53.41935400090768,14.58160400390625);
	            var opcjeMapy = {
				  scrollwheel: false,
	              zoom: 10,
	              center: wspolrzedne,
			
				    mapTypeId: google.maps.MapTypeId.HYBRID,
				    disableDefaultUI: true,
				    mapTypeControl: true, // kontrolka trybu mapy
				    navigationControl: true, // kontrolka nawigacji

				    navigationControlOptions:
				    {
				        position: google.maps.ControlPosition.LEFT_CENTER // kontrolka nawigacji w prawym, górnym rogu
				    },
				    mapTypeControlOptions:
				    {
				        position: google.maps.ControlPosition.RIGHT_BOTTOM // kontrolka trybu mapy na górze
				    }
	            };
	            var mapa = new google.maps.Map(document.getElementById("map"), opcjeMapy); 
	        }   
	        </script>
	
	<div id="map"></div>
	
	<script type="text/javascript">
	mapaStart();
	</script>

<% else %>

<h1>Witojcie!</h1>
<p>Jetu app w drodze!</p>
	
<% end %>
